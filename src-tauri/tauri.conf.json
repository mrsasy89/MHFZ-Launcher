{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Monster Hunter Frontier Z Launcher",
    "version": "1.4.5"
  },
  "tauri": {
    "bundle": {
      "identifier": "ButterClient"
    },
    "allowlist": {
      "all": true
    },
    "security": {
      "csp": null,
	  "dangerousUseHttpScheme": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "MHF-Z Launcher",
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "theme": "Dark"
      }
    ]
  }
}
